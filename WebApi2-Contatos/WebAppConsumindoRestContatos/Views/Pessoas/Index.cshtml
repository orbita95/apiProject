@model IEnumerable<WebAppConsumindoRestContatos.Models.Pessoas>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.pessoa_id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.nome)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.pessoa_id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.nome)
        </td>
        <td>
            
            @Html.ActionLink("Contatos", "Details", new { id = item.pessoa_id, nome = item.nome }) |

        </td>
    </tr>
}

</table>
